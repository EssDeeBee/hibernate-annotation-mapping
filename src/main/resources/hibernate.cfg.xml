<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.password">superPuperAdminsPassword</property>
		<property name="hibernate.connection.url">jdbc:postgresql://127.0..0.1:5432/superdb</property>
		<property name="hibernate.connection.username">superPuperAdmin</property>
		<property name="hibernate.connection.ssl">true</property>
		<property name="hibernate.connection.sslfactory">org.postgresql.ssl.NonValidatingFactory</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<mapping class="entity.Address"></mapping>
		<mapping class="entity.Employee"></mapping>
		<mapping class="entity.Project"></mapping>
		
	</session-factory>
</hibernate-configuration>